<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Arclab</title>
    <link rel="stylesheet" href="./css/site.css">
    <link rel="stylesheet" href="./css/main.css">
    <link rel="stylesheet" href="./css/article_contents.css">
    <link rel="stylesheet" href="./css/article_pages.css">

    <script src="./js/article_contents.js"></script>
    <script src="./js/article.js"></script>

</head>

<body>

    <video autoplay muted loop style="width: 100%; height: 100vh">
        <source src="/images/background.mp4">
    </video>
    
        <div class="navigation">
            {{#if user}}
            <a href="/myArticles" id="userPhotoLink"><img src="/images/avatars/{{user.avatar}}"
                    id="userPhoto">
                <p>Welcome, {{user.name}}</p>
            </a>
            {{/if}}

            <div class="nav-bar">
                {{#if user}}
                <a href="/personalDetails" class="nav-items"><img class="nav-bar-icons"
                        src="/images/icons/myarticles.png"></a>
                <a id="logout" href="#" class="nav-items"><img class="nav-bar-icons"
                        src="/images/icons/logout.png"></a>
                <script>
                    document.querySelector('#logout').addEventListener('click', function (event) {
                        event.preventDefault();
                        fetch('/api/logout')
                            .then(res => {
                                if (res.status === 204) {
                                    window.location.href = './login?message=Successfully logged out!';
                                }
                            });
                    });
                </script>
                {{else}}
                <a href="/aboutus" style="color:white;text-decoration:none;margin-left:1100px">ABOUT US</a>
                {{/if}}
            </div>
        </div>

        {{{body}}}
        
</body>

</html>